{
  "name": "gillian-bulk-alcotest",
  "version": "0.0.1",
  "description": "Alcotest backend for Gillian Bulk testing",
  "license": "BSD-3-Clause",
  "esy": {
    "build": "dune build -p gillian-bulk-alcotest",
    "buildsInSource": "_build",
    "exportedEnv": {
      "DYLD_LIBRARY_PATH": {
        "val": "#{@opam/z3.lib / 'z3' : $DYLD_LIBRARY_PATH}",
        "scope": "global"
      },
      "LD_LIBRARY_PATH": {
        "val": "#{@opam/z3.lib / 'z3' : $LD_LIBRARY_PATH}",
        "scope": "global"
      }
    }
  },
  "dependencies": {
    "gillian": "GillianPlatform/Gillian:gillian.json",
    "@opam/dune": "^2.0",
    "@opam/alcotest": "1.0.1",
    "ocaml": "^4.8.0"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/odoc": "*",
    "ocaml": "4.8.1000"
  }
}
******************************************
******************************************)

@nopath
pure pred ListToSet(+lst : List, set : Set) :
  (lst == {{  }}) * (set == -{  }-),
  (lst == l+ ({{ #e }}, #restLst)) *
    ListToSet(#restLst, #restSet) * (set == -u- (#restSet, -{ #e }-));
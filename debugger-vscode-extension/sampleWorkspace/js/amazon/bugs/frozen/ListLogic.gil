(* First projection of a list of pairs *)
@nopath
pure pred FirstProj(+lst : List, fProj : List) : (lst == {{  }}) *
  (fProj == {{  }}), (lst == l+ ({{ {{ #fst, _lvar_js_7 }} }}, #rest)) *
  FirstProj(#rest, #fProjRest) * (fProj == l+ ({{ #fst }}, #fProjRest));
  
  

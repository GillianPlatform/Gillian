 *******                  *******
 ********************************
 ********************************)
  
@nopath
pure pred Unique(l : List) :
  (l == {{  }}),
  (l == l+ ({{ #fst }}, #rest)) * ListToSet(#rest, #setRest) *
    (! (#fst --e-- #setRest)) * Unique(#rest);
    
    

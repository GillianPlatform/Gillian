{
  "name": "gillian",
  "version": "0.0.1",
  "description": "Gillian package",
  "license": "BSD-3-Clause",
  "esy": {
    "build": "dune build -p gillian",
    "buildsInSource": "_build",
    "exportedEnv": {
      "DYLD_LIBRARY_PATH": {
        "val": "#{@opam/z3.lib / 'z3' : $DYLD_LIBRARY_PATH}",
        "scope": "global"
      },
      "LD_LIBRARY_PATH": {
        "val": "#{@opam/z3.lib / 'z3' : $LD_LIBRARY_PATH}",
        "scope": "global"
      }
    }
  },
  "dependencies": {
    "@opam/cmdliner": "*",
    "@opam/dune": "^2.0",
    "@opam/batteries": "^3.0.0",
    "@opam/fmt": "^0.8.8",
    "@opam/menhir": "*",
    "@opam/visitors": "20190711",
    "@reason-native/rely": "^3.1.0",
    "@opam/alcotest": "1.0.1",
    "@opam/z3": "4.8.1",
    "ocaml": "^4.8.0"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/odoc": "*",
    "ocaml": "4.8.1000"
  }
}
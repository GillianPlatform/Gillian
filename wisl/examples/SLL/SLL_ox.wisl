// 04. Concatenating two lists
{(x == #x) * (y == #y) * SLL_ox(#x, #vx) * SLL_ox(#y, #vy) }
function SLL_concat_iter(x, y){
  if (x = null) {
    head := y
  } else {
    head := x;
    prev := head;
    next := [x + 1];
    [[ invariant {bind: prev, next, #vs1, #vs2, #v}
          SLLseg_ox(head, prev, #vs1) * (prev -b> #v, next) * SLL_ox(next,  #vs2) *
           (#vx == #vs1 @ (#v :: #vs2)) ]];
    while (not (next = null)) {
        [[ assert {bind: #prev} prev == #prev ]];
        prev := next;
        next := [next + 1];
        [[ apply SSLseg_append(head, #prev,  #vs1, #v, prev) ]]
    };
    [prev + 1] := y;
    [[ assert {bind:#svs, #sv} SLLseg_ox(head, prev, #svs) * (prev -b> #sv, y) ]];
    [[ apply SSLseg_append(head, prev, #svs, #sv, y) ]];
    [[ apply SLLseg_concat_SLL(head, y) ]]
  };
  return head
}
{ SLL_ox(ret, #vx @ #vy) }

// TODO: 05. Copying a given SLL
{ (x == #x) * SLL_ox(#x, #alpha) }
function SLL_copy_iter(x){
    y := null;
    if (x = null){
        skip
    } else {
        y := new(2);
        v := [x];
        [y] := v;
        t := [x + 1];
        p := y;
        [[ invariant {bind: c, v, t, p, #alpha1, #alpha2, #alpha3, #a}
          SLLseg_ox(x, t, #alpha1) * SLL_ox(t, #alpha2) * (v == #a) *
            (#alpha == (#alpha1 @ #alpha2)) * SLLseg_ox(y, p, #alpha3) * (p -b> #a, null) *
                (#alpha1 == (#alpha3 @ [#a])) ]];
        while (not (t = null)){
            [[ assert {bind: #t, #p} (t == #t) * (p == #p) ]];
            v := [t];
            c := new(2);
            [c] := v;
            [p + 1] := c;
            p := c;
            t := [t + 1];
            [[ apply SSLseg_append(x, #t, #alpha1, v, t) ]];
            [[ apply SSLseg_append(y, #p, #alpha3, #a, p) ]]
        };
        [[ assert {bind: #alpha3} SLLseg_ox(y, p, #alpha3) ]];
        [[ apply SSLseg_append(y, p, #alpha3, v, null) ]];
        [[ apply SLLseg_to_SLL(x) ]];
        [[ apply SLLseg_to_SLL(y) ]]
    };
    return y
}
{ SLL_ox(#x, #alpha) * SLL_ox(ret, #alpha) }

// 06. Calculating the length of a given SLL
{ (x == #x) * SLL_ox(x, #vx) }
function SLL_length_iter(x) {
  y := x;
  n := 0;
  [[invariant {bind: n, y, #nvx,  #nvy}
      SLLseg_ox(x, y,  #nvx) * SLL_ox(y, #nvy) *
         (#vx == (#nvx@#nvy)) * (n == len #nvx) ]];
  while (not (y = null)) {
    [[ assert {bind: #y} y == #y ]];
    [[ assert {bind: #v, #z} #y -b> #v, #z ]];
    y := [y+1];
    n := n+1;
    [[ apply SSLseg_append(x, #y, #nvx, #v, y) ]]
  };
  [[ unfold SLL_ox(null, #nvy)]];
  [[ apply SLLseg_to_SLL(x) ]];
  return n
}
{ SLL_ox(#x, #vx) * (ret == len(#vx)) }

// 07. Reversing a given SLL
{ (x == #x) * SLL_ox(#x, #vx) }
function SLL_reverse_iter(x) {
    y := null;
    [[ invariant {bind: x, y, z, #nvx, #nvy}
        SLL_ox(x, #nvx) * SLL_ox(y, #nvy) * (#vx == ((rev #nvy) @ #nvx)) ]];
    while (not (x = null)) {
        z := [x + 1];
        [x + 1] := y;
        y := x;
        x := z
    };
    return y
}
{ SLL_ox(ret, rev #vx) }

